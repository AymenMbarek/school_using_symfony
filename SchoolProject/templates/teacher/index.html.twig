{% extends 'base.html.twig' %}

{% block title %}Index Teacher{% endblock %}

{% block body %}
        <div class="title_left">
            <h3>List of Teachers</h3>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Teachers List</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a href="{{ path('nouvel_teacher') }}"><i class="fa fa-plus"></i> </a>
                        </li>
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div>
                    <a href="{{ path('nouvel_teacher') }}"><span class="btn btn-success"><i class="fa fa-plus-square"></i> New Teacher  </span> </a>
                </div>

            <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Mail</th>
                            <th>Class</th>
                            <th>Speciality</th>
                            <th>Action</th>
                            <th>A</th>
                        </tr>
                        </thead>



                        <tbody>
                            {% for a in listeTeachers %}
                                <tr>
                                    <td>{{ a.id }}</td>
                                    <td>{{ a.firstname }}</td>
                                    <td>{{ a.lastname }}</td>
                                    <td>{{ a.npPhone }}</td>
                                    <td>{{ a.address }}</td>
                                    <td>{{ a.mail }}</td>
                                    <td>{{ a.classe }}</td>
                                    <td>{{ a.speciality }}</td>
                                    <td>
                                        <a href="{{  path('afficher_teacher' ,{'id':a.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i> </span> </a> &nbsp;
                                        <a href="{{ path('edit_teacher', {'id':a.id }) }}"><span class="btn btn-info"><i class="fa fa-pencil"></i> </span> </a> &nbsp;
                                        <a href="{{ path('supprimer_teacher', {'id':a.id }) }}"><span class="btn btn-danger"><i class="fa fa-trash"></i> </span> </a>
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                     </table>
                </div>
            </div>
        </div>

{% endblock %}
